<config>
    <modules>
        <Paarth_FeaturedProducts>
            <version>1.0.0</version>
        </Paarth_FeaturedProducts>
    </modules>
    <frontend>
        <routers>
            <featuredproducts>
                <use>standard</use>
                <args>
                    <module>Paarth_FeaturedProducts</module>
                    <frontName>featuredproducts</frontName>
                </args>
            </featuredproducts>
        </routers>
        <layout>
            <updates>
                <featuredproducts>
                    <file>featuredproducts.xml</file>
                </featuredproducts>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<featuredproducts>
				<use>admin</use>
				<args>
					<module>Paarth_FeaturedProducts</module>
					<frontName>featuredproducts</frontName>
				</args>
			</featuredproducts>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<featuredproducts module="featuredproducts">
				<title>FeaturedProducts</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="featuredproducts">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>featuredproducts/adminhtml_featuredproducts</action>
					</items>
				</children>
			</featuredproducts>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Paarth_FeaturedProducts>
							<title>FeaturedProducts Module</title>
							<sort_order>10</sort_order>
						</Paarth_FeaturedProducts>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<featuredproducts>
					<file>featuredproducts.xml</file>
				</featuredproducts>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <featuredproducts>
                <class>Paarth_FeaturedProducts_Model</class>
                <resourceModel>featuredproducts_mysql4</resourceModel>
            </featuredproducts>
            <featuredproducts_mysql4>
                <class>Paarth_FeaturedProducts_Model_Mysql4</class>
                <entities>
                    <featuredproducts>
                        <table>featuredproducts</table>
                    </featuredproducts>
                </entities>
            </featuredproducts_mysql4>
        </models>
        <resources>
            <featuredproducts_setup>
                <setup>
                    <module>Paarth_FeaturedProducts</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </featuredproducts_setup>
            <featuredproducts_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </featuredproducts_write>
            <featuredproducts_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </featuredproducts_read>
        </resources>
        <blocks>
            <featuredproducts>
                <class>Paarth_FeaturedProducts_Block</class>
            </featuredproducts>
        </blocks>
        <helpers>
            <featuredproducts>
                <class>Paarth_FeaturedProducts_Helper</class>
            </featuredproducts>
        </helpers>
    </global>
</config>